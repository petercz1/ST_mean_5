<!DOCTYPE html>
<html lang="en" ng-app="employees" ng-contoller="do_data">

<head>
    <title>Demo</title>
    <link rel="icon" href="https://undertale.aminoapps.com/static/bower/emojify.js/images/emoji/fish.png">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.6/angular.min.js"></script>
    <script src="js/frontend_app.js"></script>

</head>

<body>
    <h1>Demo</h1>
    <p>{{message}}</p>
    <h2>CREATE</h2>
    <form>
        <input type="text" placeholder="name" ng-model="input_name">
        <input type="text" placeholder="email" ng-model="input_email">
        <input type="text" placeholder="gender" ng-model="input_gender">
        <input type="text" placeholder="job" ng-model="input_job">
        <input type="text" placeholder="color" ng-model="input_favorite_colors">
        <input type="text" placeholder="avatar" ng-model="input_avatar">
        <button ng-click="create()">create new employee</button>
    </form>
    <h2>READ</h2>
    <table class="table">
        <thead>
            <tr>
                <th>_id</th>
                <th>name</th>
                <th>email</th>
                <th>gender</th>
                <th>job</th>
                <th>color</th>
                <th>avatar</th>
            </tr>
        </thead>
        <tbody ng-repeat="employee in employees">
            <tr>
                <td>{{employee._id}}</td>
                <td><input type="text" ng-model="employee.name"></td>
                <td><input type="text" ng-model="employee.email"></td>
                <td><input type="text" ng-model="employee.gender"></td>
                <td><input type="text" ng-model="employee.job"></td>
                <td><input type="text" ng-model="employee.favorite_colors"></td>
                <td><input type="text" ng-model="employee.avatar"></td>
                <td><button ng-click="update(employee)">update</button></td>
                <td><button ng-click="delete(employee)">delete</button></td>
            </tr>
        </tbody>
    </table>
</body>

</html>